
@{
    ViewBag.Title = "NoteUnpublished";
    Layout = "~/Views/Email/_Email.cshtml";
}

<tbody class="table-component">

    <tr>
        <td class="msg-content">
            <p class="user">Hello, @ViewBag.SellerName</p>

            <p>We want to inform you that, your note <b>@ViewBag.NoteTitle</b> has been removed from the portal.
               Please find our remarks as below.
            <br />
            Remarks: <b>@ViewBag.Remarks.</b>
            </p>

            <p>
                Regards,<br />
                Notes Marketplace
            </p>
        </td>
    </tr>
</tbody>

<tfoot class="table-component">
    <tr>
        <td>
            <a class="link-btn" href="https://localhost:44374/RegisteredUser/Downloads">Notes Market Place</a>
        </td>
    </tr>
</tfoot>



