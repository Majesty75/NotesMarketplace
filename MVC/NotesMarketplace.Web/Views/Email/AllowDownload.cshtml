
@{
    ViewBag.Title = "AllowDownload";
    Layout = "~/Views/Email/_Email.cshtml";
}

<tbody class="table-component">

    <tr>
        <td class="msg-content">
            <p class="user">Hello, @ViewBag.BuyerName</p>

            <p>
                We would like to inform you that, <b>@ViewBag.SellerName</b> Allows you to download a note.
                Please login and see My Download tabs to download particular note.
            </p>

            <p>
                Regards,<br />
                Notes Marketplace
            </p>
        </td>
    </tr>
</tbody>

<tfoot class="table-component">
    <tr>
        <td>
            <a class="link-btn" href="https://localhost:44374/RegisteredUser/Downloads">Notes Market Place</a>
        </td>
    </tr>
</tfoot>


