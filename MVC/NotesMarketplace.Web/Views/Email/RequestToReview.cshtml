
@{
    ViewBag.Title = "RequestToReview";
    Layout = "~/Views/Email/_Email.cshtml";
}

<tbody class="table-component">

    <tr>
        <td class="msg-content">
            <p class="user">Hello Admins,</p>

            <p>
                We want to inform you that, <b>@ViewBag.SellerName</b> sent his note <b>@ViewBag.NoteName</b>
                 for review. Please look at the notes and take required actions.
            </p>

            <p>
                Regards,<br />
                Notes Marketplace
            </p>
        </td>
    </tr>
</tbody>

<tfoot class="table-component">
    <tr>
        <td>
            <a class="link-btn" href="https://localhost:44374/">Notes Market Place</a>
        </td>
    </tr>
</tfoot>



