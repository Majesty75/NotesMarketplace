@model NotesMarketplace.Models.AuthenticationModels.ChangePasswordModel
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_AuthenticationLayout.cshtml";
}
<!-- Change Password -->
<section id="change-password" class="user-credentials-config">

    <div class="content-box-center">

        <div class="container">

            <div class="row">

                <div class="col-md-12">

                    <!-- Logo -->
                    <div class="top-logo">
                        <a href="@Url.Action("Index","Home")"><img src="/Content/imgs/icons/top-logo.png" class="img-responsive" alt="Notes Marketplace logo"></a>
</div>
                </div>

            </div>

            <!-- Login Box -->
            <div class="white-box">

                <div class="row">

                    <div class="col-md-12">

                        <div class="heading">
                            Change Password
                        </div>

                    </div>

                    <div class="col-md-12">

                        <div class="sub-head">
                            Enter your new password to change your password
                        </div>

                        @if (ViewBag.Success != null && ViewBag.Success)
                        {
                            <div class="success" style="margin-bottom:20px;text-align:center;">Password change was successful.</div>
                        }

                    </div>

                </div>

                @*<form name="change-password" action="">*@
                @using (Html.BeginForm("ChangePassword", "Authentication", FormMethod.Post))
                {
                    @Html.AntiForgeryToken();
                    <div class="row">

                        <div class="col-md-12">

                            <div class="form-group password">

                                @*<label for="old-password">Old Password</label>
                                <input type="password" class="form-control" id="old-password" placeholder="Enter your old password">*@

                                @Html.LabelFor(m => m.Password)
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter your old password" })

                                <span class="show-pass"><img src="/Content/imgs/icons/eye.png" class="icon img-responsive" alt="eye-icon" toggle="#Password"></span>

                                @Html.ValidationMessageFor(m => m.Password, string.Empty, new { @class = "incorrect-field" })

                            </div>
                        </div>
                    </div>

                    <div class="row">

                        <div class="col-md-12">

                            <div class="form-group password">

                                @*<label for="new-password">New Password</label>
        <input type="password" class="form-control" id="new-password" placeholder="Enter your new password">*@

                                @Html.LabelFor(m => m.NewPassword)
                                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder = "Enter your new password" })

                                <span class="show-pass"><img src="/Content/imgs/icons/eye.png" class="icon img-responsive" alt="eye-icon" toggle="#NewPassword"></span>

                                @Html.ValidationMessageFor(m => m.NewPassword, string.Empty, new { @class = "incorrect-field" })

                            </div>
                        </div>
                    </div>

                    <div class="row">

                        <div class="col-md-12">

                            <div class="form-group password">

                                @*<label for="confirm-password">Confirm  Password</label>
        <input type="password" class="form-control" id="confirm-password" placeholder="Enter your confirm password">*@

                                @Html.LabelFor(m => m.ConfirmPassword)
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Enter again to confirm password" })

                                <span class="show-pass"><img src="/Content/imgs/icons/eye.png" class="icon img-responsive" alt="eye-icon" toggle="#ConfirmPassword"></span>

                                @Html.ValidationMessageFor(m => m.ConfirmPassword, string.Empty, new { @class = "incorrect-field" })

                            </div>
                        </div>
                    </div>

                    <div class="row">

                        <div class="col-md-12">

                            <button class="btn btn-general rblue-btn" name="change-password-submit">SUBMIT</button>

                        </div>
                    </div>

                @*</form>*@
                }

            </div>

        </div>

    </div>

</section>
<!-- Change Password Ends-->

