@model NotesMarketplace.Models.HomeModels.ContactUsModel
@{
    ViewBag.Title = "ContactUs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.Authorized != null && ViewBag.Authorized)
{
    Model.Email = Session["Email"].ToString();
    Model.FullName = Session["FullName"].ToString();
}

<!-- Contact Us page-->
<section id="contact-us" class="">

    <!-- Banner Image Section -->
    <section class="banner-img">

        <div class="content-box-sm">

            <div class="container-fluid">

                <div class="row">

                    <div class="col-md-12 text-center">

                        <h3>Contact Us</h3>

                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Banner Image Ends -->
    <!-- Form Section -->
    <section id="form-section">

        <div class="content-box-sm">

            <div class="container-fluid">
                @*<form id="contact-us-form" action="">*@
                @using (Html.BeginForm("ContactUs", "Home", FormMethod.Post, new { id = "contact-us-form" }))
                {
                    @Html.AntiForgeryToken()
                    <section id="get-in-touch">
                        <div class="row">

                            <div class="col-md-12">

                                <div class="horizontal-heading first-heading">
                                    <h3>Get In Touch</h3>
                                    <p>Let us know how to get back to you</p>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">

                                            @*<label for="firstname">Full Name *</label>
        <input type="text" class="form-control" id="fullname" name="fullname" placeholder="Enter your full name" required>*@

                                            @Html.LabelFor(m => m.FullName)
                                            @if (ViewBag.Authorized != null && ViewBag.Authorized)
                                            {
                                                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", placeholder = "Enter your full name", @readonly = "readonly" })
                                            }
                                            else
                                            {
                                                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", placeholder = "Enter your full name" })
                                            }

                                         </div>
                                     </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">

                                            @Html.LabelFor(m => m.Email)

                                            @if (ViewBag.Authorized != null && ViewBag.Authorized)
                                            {
                                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Enter your email address", @readonly = "readonly" })
                                            }
                                            else
                                            {
                                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Enter your email address" })
                                            }

                                            @Html.ValidationMessageFor(m => m.Email, String.Empty, new { @class = "incorrect-field" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">

                                            @*<label for="subject">Subject *</label>
                                                <input type="text" class="form-control" id="subject" name="subject" placeholder="Enter your subject" required>*@

                                            @Html.LabelFor(m => m.Subject)
                                            @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", placeholder = "Enter your subject" })

                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">

                                    @*<label for="comment">Comments/Questions *</label>
                                        <textarea class="form-control" id="comment" name="comment" placeholder="Comments..."></textarea>*@

                                    @Html.LabelFor(m => m.Comment)
                                    @Html.ValidationMessageFor(m => m.Comment, String.Empty, new { @class="incorrect-field"})
                                    @Html.TextAreaFor(m => m.Comment, new { @class = "form-control", placeholder = "Comments..." })
                                    
                                </div>
                            </div>
                        </div>
                    </section>
                    <button type="submit" form="contact-us-form" class="btn rblue-btn btn-general" name="contact-us-submit">
                        submit
                    </button>
                    @*</form>*@
                }
            </div>
        </div>
    </section>
    <!-- Form Ends -->
</section>
<!-- Contact Us Page Ends -->